#!/usr/bin/env bash

source $(dirname $0)/../lib/bowline/bowline
assert_running
assert_composer

check_proxy
[ "$PROXY_HOST_SET" ] && DRUSH_URI="http://${BOWLINE}.localtest.me" || DRUSH_URI="http://${web_ip}/"

echo "Running 'drush $@' inside container, using uri: ${DRUSH_URI}"
docker exec -u www-data -it ${web} /var/www/vendor/drush/drush/drush --root=/var/www/$DOCROOT --uri=${DRUSH_URI} "$@"
