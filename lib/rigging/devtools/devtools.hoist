#!/usr/bin/env bash

echo "# Pulling devtools image"
docker pull davenuman/bowline-devtools

echo "# Installing scripts"
cp -av lib/rigging/devtools/bin/* bin

echo "# Adding config"
echo "devtools:" >> docker-composer.yml
echo "  image: davenuman/bowline-devtools" >> docker-composer.yml
echo "  command: /usr/local/bin/node devtools.js" >> docker-composer.yml
